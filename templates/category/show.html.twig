{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_category_details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.book_category_details'|trans({'%id%': category.id|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{ category.name }}</dd>
        </dl>

        <p>
            {% if is_granted('EDIT', category) %}
                <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action.edit'|trans }}">
                   {{ 'action.edit'|trans }}
                </a>
                {% endif %}
        </p>
            {% if is_granted('DELETE', category) %}
                <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action.delete'|trans }}">
                    {{ 'action.delete'|trans }}
                </a>
            {% endif %}
        </p>
        <p>
            <a href="{{ url('category_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.record_not_found'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}